<%= simple_form_for(@room, :html => { :class => 'form-horizontal' }) do |f| %>
	<%=  f.input :name, :input_html => { :class => "span6" }, placeholder: "Room name"  %>
	<%=  f.input :description, :input_html => { :class => "span6" }, :placeholder => "Room description", as: :text %>
	<%=  f.input :capacity, :input_html => { :class => "span6" }, :placeholder => "No of people it can hold", :error_html => {:class=>"customized_error"} %>
	<%= f.input :status,
        :collection => [['true', 'Available'], ['false', 'Not Available']],
        :label_method => :last,
        :value_method => :first,
        :item_wrapper_class => 'inline',
        :checked => @room.status == 1? true : false,
        # :default => @room.status = true,
        :required => true,
        :as => :radio %>
	<%= f.submit 'Save', :class => "btn btn-primary" %>
	
	
	<%=  f.button :submit, :class => 'btn-primary'
submit_tag 'Cancel', :type => :reset, :class => "btn btn-danger"%>
<% end %>