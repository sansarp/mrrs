<%= simple_form_for(@booking, :html => { :class => 'form-horizontal' }) do |f| %>
	<%=  f.input :title, :input_html => { :class => "span6" },:error_html => {:class=>"customized_error"}, placeholder: "Title for reservation"%>
	

	<%=  f.input :description, :input_html => { :class => "span6" }, :placeholder => "Description", as: :text %>
	
	<%=  f.input :start_time, :input_html => { :class => "span2" }, :error_html => {:class=>"customized_error"}%>
	<%= f.error :name, :class => "customized_error" %>
	
	<%=  f.input :end_time, :input_html => { :class => "span2" }%>
	
	<%=  f.association :room, :input_html => {:class => "span6"},:error_html => {:class=>"customized_error"} %>
	
	
	<%= f.submit 'Save', :class => "btn btn-primary" %>
<% end %>